{% extends 'base.html.twig' %}

{% block title %}Admin index{% endblock %}

{% block body %}
    <h1>Home page</h1>
    <div class="d-flex justify-content-center">
    <a href="{{ path('admin_new') }}" class="btn btn-info" >Add New Admin</a>
    </div>
        
    <table class="table table-sm" >
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for admin in admins %}
            <tr>
                <td>{{ admin.nom }}</td>
                <td>{{ admin.prenom }}</td>
                <td>
                    <a href="{{ path('admin_detail', {'id': admin.id}) }}" class="btn btn-light" >Detail</a>
                    <a href="{{ path('admin_edit', {'id': admin.id}) }}" class="btn btn-dark" >Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">None</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
